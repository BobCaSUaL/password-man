{
    "plugins": [
        "react", "pure", "immutable"
    ],
    "env": {
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        }
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "rules": {
        "immutable/no-let": 2,
        "immutable/no-this": 2,
        "immutable/no-mutation": 2,
        "indent": [1, 3],
        "semi": [2, "never"],

        "no-console": "off",
        "no-redeclare": "warn",
        "no-undef": "warn",
        "no-unused-vars": ["warn", {
            "vars": "all",
            "args": "none"
        }],
        "no-var": 2,
        "prefer-const": 2,
        "react/jsx-boolean-value": [2, "always"],
        "react/jsx-closing-bracket-location": [1, "after-props"],
        "react/jsx-indent-props": [1, 3],
        "react/jsx-indent": [1, 3],
        "react/prop-types": "warn"
    }
}
